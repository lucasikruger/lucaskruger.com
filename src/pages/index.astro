		<script>
			const langToggle = document.getElementById('langToggle');
			const langHint = document.getElementById('langHint');
			const flagEN = document.getElementById('flagEN');
			const flagES = document.getElementById('flagES');
			const enElements = document.querySelectorAll('.lang-en');
			const esElements = document.querySelectorAll('.lang-es');

			// Detect browser language
			const browserLang = navigator.language || navigator.userLanguage;
			const savedLang = localStorage.getItem('lang');
			// Default to English, only use saved preference
			let currentLang = savedLang || 'en';

			function setLanguage(lang) {
				currentLang = lang;
				localStorage.setItem('lang', lang);
				document.documentElement.lang = lang;
				langHint.style.display = 'none';

				if (lang === 'es') {
					enElements.forEach(el => el.style.display = 'none');
					esElements.forEach(el => el.style.display = '');
					flagES.classList.add('front');
					flagES.classList.remove('back');
					flagEN.classList.add('back');
					flagEN.classList.remove('front');
				} else {
					enElements.forEach(el => el.style.display = '');
					esElements.forEach(el => el.style.display = 'none');
					flagEN.classList.add('front');
					flagEN.classList.remove('back');
					flagES.classList.add('back');
					flagES.classList.remove('front');
				}
			}

			// Set initial language
			setLanguage(currentLang);

			// Show hint if browser is Spanish and no saved preference
			if (browserLang.startsWith('es') && !savedLang) {
				langHint.style.display = 'block';
				setTimeout(() => { langHint.style.display = 'none'; }, 5000);
			}

			// Toggle on click
			langToggle.addEventListener('click', () => {
				setLanguage(currentLang === 'en' ? 'es' : 'en');
			});
		</script>

